<h1>Add Artist</h1>
<%= form_for @artist do |f| %>
    <div class = "field">
        <%= f.label :artist_name %>
        <%= f.text_field :artist_name, required: true, placeholder: "Artist Name" %>
    </div>
    <div>
        <form action="#">
            <label>
                <input type="checkbox" />
                    <span>
                        <%= f.label :seen_live %>
                        <%= f.check_box :seen_live %>
                </span>
            </label>    
        </div>    
         <%= f.submit class: "waves-effect waves-light btn" %>
<% end %>

 



